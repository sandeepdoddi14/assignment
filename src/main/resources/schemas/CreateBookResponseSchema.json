{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BookCreationResponse",
  "type": "object",
  "required": ["success", "message", "data"],
  "properties": {
    "success": {
      "type": "boolean"
    },
    "message": {
      "type": "string"
    },
    "data": {
      "type": "object",
      "required": ["id", "title", "author", "isbn", "publishedYear", "available"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "isbn": {
          "type": "string",
          "pattern": "^(97(8|9))?\\-?\\d{1,5}\\-?\\d{1,7}\\-?\\d{1,7}\\-?\\d{1}$"
        },
        "publishedYear": {
          "type": "integer"
        },
        "available": {
          "type": "boolean"
        }
      }
    }
  }
}
